{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**"
		]
	},
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"interface-name": false,
		"no-consecutive-blank-lines": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"quotemark": [
			true,
			"single"
		],
		"no-console": false,
		"max-line-length": [
			true,
			150
		],
		"ban": [
			true,
			"eval",
			{
				"name": [
					"describe",
					"only"
				],
				"message": "don't focus test suites"
			},
			{
				"name": [
					"describe",
					"skip"
				],
				"message": "don't skip test suites"
			},
			{
				"name": [
					"it",
					"only"
				],
				"message": "don't focus tests"
			},
			{
				"name": [
					"it",
					"skip"
				],
				"message": "don't skip tests"
			}
		]
	},
	"jsRules": {
		"no-console": false
	}
}
